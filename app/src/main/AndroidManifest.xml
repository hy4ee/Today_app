<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.haru">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".TodoActivity"></activity>
        <activity android:name=".DiaryActivity"></activity>
        <activity android:name=".HaruActivity"></activity>
        <activity android:name=".MemoActivity"></activity>
        <activity android:name=".FeelingActivity"></activity>
        <activity android:name=".HumorActivity"></activity>
        <activity android:name=".U1Activity"></activity>
        <activity android:name=".U2Activity"></activity>
        <activity android:name=".U3Activity"></activity>
        <activity android:name=".U4Activity"></activity>
        <activity android:name=".VideoActivity"></activity>

        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".MemoProvider"
            android:authorities="com.example.databaseexam.provider"
            android:enabled="true"
            android:exported="true"></provider>

    </application>

</manifest>
